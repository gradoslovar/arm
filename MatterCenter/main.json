{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servicePlanConfig": {
            "type": "object"
        },
        "appLocation": {
            "type": "string"
        },
        "nestedDeploymentFarmName": {
            "type": "string"
        }
    },
    "variables": {
        "deploymentApiVersion": "2015-01-01"
    },
    "resources": [
        {
            "name": "[parameters('nestedDeploymentFarmName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/arm/develop/MatterCenter/resources/webFarm.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}                
                }
            }
        },
        {
            "name": "webApp",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "[variables('deploymentApiVersion')]",
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/', parameters('nestedDeploymentFarmName'))]"
            ],
            "properties": {
                "mode":"Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/gradoslovar/arm/develop/MatterCenter/resources/webApp.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "servicePLanConfig": {"value": "[parameters('servicePlanConfig')]"},
                    "appLocation": {"value": "[parameters('appLocation')]"}
                }
            }
        }  
    ],
    "outputs": {}
}